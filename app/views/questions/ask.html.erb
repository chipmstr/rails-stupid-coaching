<div class="d-flex justify-content-center">
  <div style="width: 400px;">
    <h1 class="mb-4">Ask a question!</h1>
    <form action="/answer" method="get" data-turbo="false" class="mb-4">
      <div class="mb-3">
        <label for="question" class="form-label w-100">Ask your coach anything:</label>
        <div class="d-flex">
          <input type="text" class="form-control me-2" name="question" id="question" placeholder="Ask your question here" style="flex: 1;">
          <input type="submit" value="Ask!" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>
